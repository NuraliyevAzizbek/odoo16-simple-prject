<odoo>
    <record model="ir.module.category" id="module_category_todo">
        <field name="name">Todo</field>
        <field name="description">Todo app organish uchun</field>
        <field name="sequence">44</field>
    </record>

    <record id="group_todo_creator" model="res.groups">
        <field name="name">Todo creator</field>
        <field name="category_id" ref="module_category_todo"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_todo_doer" model="res.groups">
        <field name="name">Todo doer</field>
        <field name="category_id" ref="module_category_todo"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_todo_cleaner" model="res.groups">
        <field name="name">Todo cleaner</field>
        <field name="category_id" ref="module_category_todo"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>