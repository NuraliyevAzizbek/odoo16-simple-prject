<odoo>
  <record id="todo_view_kanban" model="ir.ui.view">
      <field name="name">todo.view.kanban</field>
      <field name="model">todo.task</field>
      <field name="arch" type="xml">
          <kanban class="o_kanban_example">
              <field name="name"/>
              <field name="description"/>
              <field name="deadline"/>
              <field name="is_done"/>
              <templates>
                  <t t-name="kanban-box">
                      <div class="oe_kanban_card">
                          <strong><field name="name"/></strong>
                          <div><field name="description"/></div>
                          <div><field name="deadline"/></div>
                          <div>Status: <field name="is_done"/></div>
                      </div>
                  </t>
              </templates>
          </kanban>
      </field>
  </record>



  <record id="todo_action" model="ir.actions.act_window">
    <field name="name">Todo</field>
    <field name="res_model">todo.task</field>
    <field name="view_mode">kanban,tree,form</field>
  </record>

  <menuitem id="todo_menu_root" name="To-Do" sequence="1"/>
  <menuitem id="todo_menu" name="Tasks" parent="todo_menu_root" action="todo_action"/>

</odoo>